<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PamNotes.MainPage">

   
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

        <Editor 
            x:Name="EditorSalvar"
            Placeholder="Digite aqui a sua anotação"
            HeightRequest="300"  
            
        />

        <Label
        x:Name ="Exibir"
        />
            

        <HorizontalStackLayout Spacing="25" HorizontalOptions="Center">
        <Button Text="Salvar" WidthRequest="250" x:Name="SaveButton" Clicked="SaveButton_Clicked"/>
        <Button Text="Apagar" WidthRequest="250" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"/>
        </HorizontalStackLayout>




    </VerticalStackLayout>
  

</ContentPage>
